<div class="container">
  <div class="row">
    <div class="span12">
        <%= form_for(@video, :url => videos_path, :method => :post, :html => {:multipart => true, :class => "form-horizontal", :role => "form" }) do |f| %>
            <div class="form-group">
                <%= f.label :email, "Email *" %>
                <%= f.email_field :email, :maxlength=> 50, :class => "form-control", :required => true %>
            </div>
            <div class="form-group">
              <%= f.label :message, "Message *" %>
              <%= f.text_field :message, :maxlength=> 100, :class => "form-control", :required => true %>
            </div>
            <div class="form-group">
              <label for="exampleInputFile">File input</label>
              <%= f.label :video, "Video *" %>
              <%= f.file_field :video %>
              <p class="help-block">Example block-level help text here.</p>
            </div>
            <button type="submit" class="btn btn-default">Enviar</button>
        <% end %>
    </div>
  </div>
</div>